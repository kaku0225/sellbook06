<h1>妳好</h1>

<%= flash[:notice] %>
<%= link_to '新增書籍', new_book_path %>


<table>
  <tr>
    <td>bookname</td>
    <td>author</td>
    <td>price</td>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.bookname, book_path(book.id) %></td>
      <td><%= book.author%></td>
      <td><%= book.price %></td>
      <td><%= link_to '編輯', edit_book_path(book.id) %></td>
      <td><%= link_to '刪除', book_path(book.id), method:'delete' %></td>
    </tr>
  <% end %>
</table>

<% if session[:user9527].present? %>
  <%= link_to '登出', sign_out_users_path, method:'delete' %>
  <%= link_to '更新', edit_users_path %>
<% else %>
  <%= link_to '註冊', sign_up_users_path %>
  <%= link_to '登入', sign_in_users_path %>
<% end %>